<launch>
	<arg name="image_view" default="false" />
	<arg name="camera" default="/viz/camera_2" />

	<node pkg="robot_model_renderer" type="robot_model_renderer_node" name="camera_self_filter" output="screen">
		<!-- input topic for camera_info -->
                <remap from="camera_info" to="$(arg camera)/camera_info" />
		<!-- ouput topic for mask -->
                <remap from="mask" to="/viz/camera_0/mask" />
                <remap from="robot_description" to="nifti_robot_description" />
		<!-- Default value of parameter "inverted = false" means that pixels where is robot have white color(255) and
		     other pixels black color(0). If value of parameter is true then pixels have opposite values."   -->
                <param name="invert_colors" type="bool" value="false" />
		<!-- Value of near clip of frustrum. Default value is 0.05. -->
                <param name="near_clip" type="double" value="0.03" />
                <!-- Safety margin with the mask. Value represents radius of circle which is used as kernel of dilation element.-->
                <param name="outline_width" type="int" value="5" />
		<!-- camera setting-->
                <param name="use_rectified" type="bool" value="true" />
	</node>

	<node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen" if="$(arg image_view)">
		<remap from="image" to="/viz/camera_0/mask"/>
	</node>
	<node name="image_view2" pkg="image_view" type="image_view" respawn="false" output="screen" if="$(arg image_view)">
		<remap from="image" to="$(arg camera)/image"/>
	</node>
	
</launch>
